# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Channel ID (where to post monitoring messages)
CHANNEL_ID=your_channel_id_here

# Update interval in seconds (default: 60)
UPDATE_INTERVAL=60

# Uptime check interval in seconds (default: 3600 = 1 hour)
UPTIME_CHECK_INTERVAL=3600

# Spread updates in seconds to avoid Discord rate limits (default: 0.5)
UPDATE_SPREAD_SECONDS=0.5

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Prefer a specific local interface (e.g., tailscale0). Leave empty to auto-detect.
LOCAL_INTERFACE=tailscale0

# SSH host key checking (recommended true with known_hosts)
STRICT_HOST_KEY_CHECKING=false

# Optional known_hosts path (e.g., ~/.ssh/known_hosts)
KNOWN_HOSTS_FILE=
